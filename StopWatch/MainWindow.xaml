<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stopwatch" Height="120" Width="200" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Button Click="StartTimer" Content="Start Timer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="StopTimer" Content="Stop Timer" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75"/>
        <Label Name="TimeLabel" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Width="175" FontSize="20" HorizontalContentAlignment="Center" />

    </Grid>
</Window>
